<%- include("./partials/header") %>

<div class="container">
    <% if(!noMessage) { %>
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
                <div id="success" class="alert alert-success">
                    <%= successMsg %>
                </div>
            </div>
        </div>
 <% } %> 

<% products.forEach((product) => { %>
        <div class="row">
            <% product.forEach((item) => { %>
                <div class="col-md-4 col-sm-6 col-xs-12 cmd">
                    <div class="thumbnail">
                        <img style="border-radius: 20px;" src="<%= item.image %>">
                        <div class="caption">
                            <h3><%= item.name %></h3>
                            <h4>Rs.<%= item.price%></h4>
                            <a href="/add-to-cart/<%= item._id %>" class="btn btn-success">Add to Cart</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
<% }) %>
</div>


<%- include("./partials/footer") %>
