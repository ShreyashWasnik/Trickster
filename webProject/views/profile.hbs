<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>User Profile</h1>
        <hr>
        <h2>My Orders</h2>
        {{#each orders }}
            <div class="card" style="width: 18rem;">
                <ul class="list-group list-group-flush">
                    {{#each this.items }}
                        <li class="list-group-item">
                            <span class="badge">Rs.{{ this.price }}</span>
                            {{ this.item.name }} | {{ this.qty }}
                        </li>
                    {{/each}}
                </ul>
            </div>
        {{/each}}
    </div>
</div>