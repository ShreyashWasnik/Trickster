<div class="profile">


<div class="container">
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <br>
       <h1 class="fontcaveat">My Profile</h1>
       <hr>
     

        <h4 >Username:{{#each user}}
            
                {{this.name}}
            
           
        {{/each}} </h4>
              <h4>Email:{{#each user}}
            
                {{this.email}}
            
           
        {{/each}} </h4>
       

    
        <hr>
        <h2 class="fontcaveat">My Orders</h2>
        <hr>
        {{#each orders }}
            <div class="panel panel-default">
                <div class="panel-body">
                    <ul class="list-group">
                        {{#each this.items }}
                            <li class="list-group-item">
                                <span class="badge"><i class="fas fa-rupee-sign"></i>{{ this.price }}</span>
                                <h4>{{ this.item.name }} | {{ this.qty }}</h4>
                            </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        {{/each}}
    </div>
</div>
</div>
</div>


