                            <a id="remove" href="/remove/<%= product.item._id %>" class="btn btn-danger">Remove All</a>
                        </li>
                    <% }) %>
                </ul>
            </div>
        </div>
        <div class="row" style="margin-left: 610px;">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                <h3>Total: <i class="fas fa-rupee-sign rupees"></i><%=  totalPrice %></h3>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                <a href="/checkout" class="btn btn-success" type="button">CheckOut</button></a>
                <br>
                <br>
                <br>
            </div>
        </div>
    <% } else { %>
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                <h2>No Items in the Cart</h2>
            </div>
        </div>
    <% } %>
</div>
